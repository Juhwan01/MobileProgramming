<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_gravity = "center_horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id = "@+id/btn_kor"
            android:text = "KOREA"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id = "@+id/btn_japan"
            android:text = "JAPAN"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id = "@+id/btn_china"
            android:text = "CHINA"
            />
    </LinearLayout>

    <FrameLayout
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_gravity="center"
        android:orientation = "vertical"
        android:layout_margin="50dp">
        <ImageView
            android:id = "@+id/img_kor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src = "@drawable/kor"
            />
        <ImageView
            android:id = "@+id/img_jpn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src = "@drawable/jpn"
            android:visibility="invisible"/>
        <ImageView
            android:id = "@+id/img_chi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src = "@drawable/chi"
            android:visibility="invisible"/>
    </FrameLayout>
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <TextView
            android:id = "@+id/text_kor"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="KOREA" />
        <TextView
            android:id = "@+id/text_jpn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="JAPAN"
            android:visibility="invisible"/>
        <TextView
            android:id = "@+id/text_chi"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="CHINA"
            android:visibility="invisible"/>
    </FrameLayout>


</LinearLayout>